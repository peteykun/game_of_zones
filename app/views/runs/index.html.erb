<h1>List of Runs</h1>
<hr>

<% if params[:notice] != nil %>
<div class="alert alert-danger" role="alert">Oak's words echoed... <b><%= params[:notice] %></b><br>There's a time and place for everything, but not now!</div>
<% end %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Program</th>
      <th>Submitted</th>
      <th>Tested</th>
      <th>Success</th>
      <th width="10%">Controls</th>
    </tr>
  </thead>

  <tbody>
    <% @runs.each do |run| %>
      <tr>
        <td><%= run.problem.name %></td>
        <td><%= run.timestamp.strftime('%b %e, %l:%M:%S %p') %></td>
        <td><% if run.tested %>&check;<% else %>&#10007;<% end %></td>
        <td><% if run.success %>&check;<% else %>&#10007;<% end %></td>
        <td>
          <%= link_to run do %>
          <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span> View
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @problems, renderer: BootstrapPagination::Rails %>
