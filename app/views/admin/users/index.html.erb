<h1>Listing Users</h1>
<hr>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Username</th>
      <th>Email</th>
      <th>Admin</th>
      <th colspan="3" width="30%">Controls</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.username.titleize %></td>
        <td><%= user.email %></td>
        <td><% if user.is_admin %>&check;<% else %>&#10007;<% end %></td>
        <td>
          <%= link_to [:admin, user] do %>
          <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span> View
          <% end %>
        </td>
        <td>
          <%= link_to edit_admin_user_path(user) do %>
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
          <% end %>
        </td>
        <td>
          <%= link_to [:admin, user], method: :delete, data: { confirm: 'Are you sure?' } do %>
          <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Delete
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @problems, renderer: BootstrapPagination::Rails %>
<br>
<br>

<%= link_to 'New User', new_admin_user_path, class: 'btn btn-default', class: 'btn btn-default' %>
