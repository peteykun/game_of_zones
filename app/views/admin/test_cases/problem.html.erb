<h1>Test Cases for <b><%= @problem.name %></b></h1>
<hr>

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @problem.name %>
</p>

<p>
  <strong>Difficulty:</strong>
  <%= @problem.difficulty %>
</p>

<p>
  <strong>Region:</strong>
  <% if @problem.region == nil %>
  Nowhere
  <% else %>
  <%= link_to @problem.region.name, admin_region_path(@problem.region) %>
  <% end %>
</p>

<hr>

<table class="table pre">
  <thead>
    <th width="40%">Input</th>
    <th width="40%">Output</th>
    <th colspan="2" width="20%">Controls</th>
  </thead>

  <% @problem.test_cases.each do |test_case| %>
  <tr>
    <td><pre><%= test_case.input %></pre></td>
    <td><pre><%= test_case.output %></pre></td>
    <td>
      <%= link_to edit_admin_test_case_path(test_case) do %>
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
      <% end %>
    </td>
    <td>
      <%= link_to [:admin, test_case], method: :delete, data: { confirm: 'Are you sure?' } do %>
      <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Delete
      <% end %>
    </td>
  </tr>
  <% end %>
</table>

<hr>

<br>

<%= link_to 'Create new Test Case', {controller: 'test_cases', action: 'new', id: @problem.id}, class: 'btn btn-success' %>
<%= link_to 'Back to Problem', [:admin, @problem], class: 'btn btn-default' %>
<%= link_to 'Edit Problem', edit_admin_problem_path(@problem), class: 'btn btn-default' %>
