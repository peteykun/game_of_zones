  <h1>List of Problems</h1>
<hr>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th width="5%">#</th>
      <th width="70%">Problem Name</th>
      <th>Controls</th>
    </tr>
  </thead>

  <tbody>
    <% @problems.each do |problem| %>
      <tr>
        <td><%= problem.id %></td>
        <td><%= problem.name %></td>
        <td>
          <%= link_to problem do %>
          <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span> Read Statement
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
